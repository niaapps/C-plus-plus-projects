#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;

int main()
{
float const PI = 3.14;
float counter,angle; // counter, temporary place for angle to display and input variable
cout << setw(3) << "Cosine"; // first column
cout << setw(6) << "Sine"  ; // second column



for (counter = 0; counter < 5; counter++) // for loop that outputs sin and cos of angle given.
{

cout << "(Enter an angle)"; // prompt
cin>> angle; // takes in angle



angle = angle * (PI/180); // converts angle to radian form

cout << setw(3) << cos(angle) << "  ";
cout << setw(6) << sin(angle);





}
/*
